    <main class="main">
        <div class="page-header text-center"
            style="background-image: url('/user/assets/images/page-header-bg.jpg')">
            <div class="container">
                <h1 class="page-title">Order History<span>Orders</span></h1>
            </div><!-- End .container -->
        </div><!-- End .page-header -->

        <div class="col-lg-12 col-md-12 col-sm-12 col-12" style="margin-left: 180px;">
            <div class="page-content "> 
                <div class="container-fluid "> 
                <br><br>

                <% if (orderData && orderData.length > 0) { %>
                    <% orderData.forEach((order) => { %>
                        <% let mainProductDisplayed = false; %>

                        <% order.products.forEach((product, index) => { %>
                            <% if (!mainProductDisplayed) { %>
                                <div class="product product-list ">
                                    <div class="row">
                                        <div class="col-6 col-lg-1">
                                            <figure class="product-media">
                                                <a href="#">
                                                    <img src="/processed_images/<%= product.productId.prdctImage[0] %>" alt="Product image">
                                                </a>
                                            </figure><!-- End .product-media -->
                                        </div><!-- End .col-sm-6 col-lg-3 -->

                            <div class="col-6 col-lg-3 order-lg-last">
                                <div class="product-list-action">

                                    <button class="btn btn-primary order-details-btn" type="submit">
                                        <a href="/orderDetails?orderId=<%= order._id %>" class="text-white">Order Details</a>
                                    </button>   

                                </div><!-- End .product-list-action -->
                            </div><!-- End .col-sm-6 col-lg-3 -->

                            <div class="col-lg-6">
                                <div class="product-body product-action-inner">
                                    <div class="product-cat">
                                        <a href="#"><%= product.productId.categoryId.cateName %></a>
                                    </div><!-- End .product-cat -->
                                    <h3 class="product-title"><a href="#"><%= product.productId.prdctName %></a></h3><!-- End .product-title -->
                                    <div class="product-content" style="display: inline-block;">
                                        <span style="font-weight: 500;">Total Amount :</span> â‚¹<%= order.totalAmount %> &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                                        <span style="font-weight: 500;">Items :</span> <%= order.products.length %>
                                    </div>
                                    <% if (order.products.length > 1) { %>
                                        <div class="product-nav product-nav-thumbs">
                                            <% order.products.slice(1).forEach((prod) => { %>
                                                <a href="#">
                                                    <img src="/processed_images/<%= prod.productId.prdctImage[0] %>" alt="Thumbnail">
                                                </a>
                                            <% }); %>
                                        </div><!-- End .product-nav -->
                                    <% } %>

                                </div><!-- End .product-body -->
                            </div><!-- End .col-lg-6 -->
                            
                        </div><!-- End .row -->
                    </div><!-- End .product -->
                    <% mainProductDisplayed = true; %>
                    <% } %>
                <% }); %>
            <% }); %>
        <% } %>

                    
                </div>
            </div>
        </div>
    </main> 

