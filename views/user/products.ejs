    <script>
    function addToCart(productId) {
        fetch(`/addProductsToCart?productId=${productId}`)
            .then(response => response.json())
            .then(data => {
                if (data.message === "Item added to cart") {
                    swal({
                        title: "Success!",
                        text: "Item added to cart",
                        icon: "success",
                        timer: 1000, 
                        buttons: false, 
                        
                    });
                } else if (data.message === "Item is already in the cart") {
                    swal({
                        text: "This item is already in your cart",
                        icon: "info",
                        timer: 1000, 
                        buttons: false, 
                        
                    });
                } else {
                    swal({
                        title: "Error!",
                        text: "Something went wrong",
                        icon: "error",
                        timer: 1000, 
                        buttons: false, 
                        
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                swal({
                    title: "Error!",
                    text: "Something went wrong",
                    icon: "error",
                    timer: 800, 
                    buttons: false, 
                    
                });
            });
    }
</script>
