<script>
    document.addEventListener('DOMContentLoaded', function() {
        const selectElement = document.querySelector('#sortby');

        selectElement.addEventListener('change', function() {
            const selectedValue = selectElement.value;

            fetch('/sortingProducts', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ sortby: selectedValue })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error("Unknown network error occurred!");
                }
                return response.json();
            })
            .then(data => {
                if(data.success){
                    const products = data.data;
                    updateUIWithSortedProducts(products);
                }else {
                    console.error('Error:', data); 
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        });
    });


</script>
<script>
    function updateUIWithSortedProducts(products) {
        
        const productsContainer = document.querySelector('.products .row');
        productsContainer.innerHTML = '';
        
        products.forEach(product => {
            if (product.is_listed === true && product.prdctQuantity > 0) {
                const productHTML = `
                    <div class="col-6 col-md-4 col-lg-4">
                        <div class="product product-7 text-center">
                            <figure class="product-media">
                                <a href="productDetails?productId=${product._id}">
                                    <img src="/processed_images/${product.prdctImage[0]}"
                                        alt="Product image" class="product-image">
                                </a>
                                <div class="product-action-vertical">
                                    <a href="#" class="btn-product-icon btn-wishlist btn-expandable" onclick="addToWishlist('${product._id}')"><span>Add to wishlist</span></a>
                                </div><!-- End .product-action-vertical -->
                                <div class="product-action">
                                    <a href="#" class="btn-product btn-cart" onclick="addToCart('${product._id}')"><span>Add to cart</span></a>
                                </div><!-- End .product-action -->
                            </figure><!-- End .product-media -->
                            <div class="product-body">
                                <h3 class="product-title"><a href="productDetails?productId=${product._id}">${product.prdctName}</a></h3><!-- End .product-title -->
                                <div class="product-price">
                                    <p>₹${product.prdctPrice}</p>
                                </div><!-- End .product-price -->
                                <div class="ratings-container">
                                    <div class="ratings">
                                        <div class="ratings-val" style="width: 20%;"></div><!-- End .ratings-val -->
                                    </div><!-- End .ratings -->
                                    <span class="ratings-text">( 2 Reviews )</span>
                                </div><!-- End .rating-container -->
                            </div><!-- End .product-body -->
                        </div><!-- End .product -->
                    </div><!-- End .col-sm-6 col-lg-4 -->
                `;
                productsContainer.insertAdjacentHTML('beforeend', productHTML);
            }
        });
    }
</script>



