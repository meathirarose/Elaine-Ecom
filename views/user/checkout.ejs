<script>
    function editAddressShow(id) {

        $(`#edit-address${id}`).click(function (e) {
            e.preventDefault();
            $('.card-dashboard').hide();
            $('.showAddAddress').hide();
            $(`#editAddress${id}`).show();
        });

    }

</script>
<script>
    
$(document).ready(function () {
    // Edit button click
    $('.edit-address').click(function (e) {
        e.preventDefault();
        var editId = $(this).data('edit-id');
        $('#editAddressForm' + editId).submit(); 
    });

    // Edit address form submission
    $('.edit-address-form').submit(function (e) {
        e.preventDefault();
        var editId = $(this).find('#editAddressId').val();
        var formData = $(this).serialize();

        fetch('/editAddress/' + editId, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded'
            },
            body: formData
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            console.log('Address updated successfully:', data);
            location.reload();
        })
        .catch(error => {
            console.error('Error:', error);
        });
    });
});


</script>

    <script>
        document.getElementById('placeOrderBtn').addEventListener('click', function (e) {
        e.preventDefault();

        var selectedAddressId = document.querySelector('input[name="billingAddress"]:checked').value;

        var selectedAddress = userDataCheckout.address.find(address => address._id === selectedAddressId);

        var cartProducts = cartData.products;

        var orderData = {
            address: selectedAddress,
            products: cartProducts
        };

        fetch('/placeOrder', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(orderData)
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            console.log('Order placed successfully:', data);
        })
        .catch(error => {
            console.error('Error placing order:', error);
        });
    });

</script>

