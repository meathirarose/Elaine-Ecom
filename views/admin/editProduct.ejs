<script>
    async function deleteImage(imageId) {
        const confirmDelete = await Swal.fire({
            title: 'Are you sure?',
                    text: "You want to delete this image?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, remove it!'
        });

        if (confirmDelete.isConfirmed) {
            try {
                const response = await fetch(`/admin/deleteProductImage?imageId=${imageId}`, {
                    method: 'DELETE'
                });
                
                if (response.ok) {
                    const data = await response.json();

                        window.location.reload();
                    
                } else {
                    Swal.fire({
                        title: 'Error!',
                        text: 'Failed to delete the image.',
                        icon: 'error'
                    });
                }
            } catch (error) {
                Swal.fire({
                    title: 'Error!',
                    text: 'An error occurred while deleting the image.',
                    icon: 'error'
                });
                console.error("Error:", error);
            }
        }
    }
</script>

<script>
    
    document.getElementById('imageForm').addEventListener('submit', async function (e){
        e.preventDefault();

        const formData = new FormData(this);
        const prdctId = document.querySelector('input[name="prdctId"]').value;
        formData.append('prdctId', prdctId); 

        // Validate image files
        const allowedExtensions = ['jpeg', 'jpg', 'png', 'gif', 'bmp'];
        const fileInputs = document.querySelectorAll('input[type="file"]');
        let totalImages = 0;

        // Count existing images
        <% productImagesArray.forEach(() => { %>
            totalImages++;
        <% }); %>

        // Count new images
        fileInputs.forEach(input => {
            totalImages += input.files.length;
        });

        // Check if at least 4 images are selected
        if (totalImages < 4) {
            Swal.fire({
                title: 'Error!',
                text: 'Please upload at least 4 images.',
                icon: 'error',
                confirmButtonText: 'OK'
            });
            return; // Stop the form submission
        }

        // Check each file's extension
        fileInputs.forEach(input => {
            for (let i = 0; i < input.files.length; i++) {
                const fileExtension = input.files[i].name.split('.').pop().toLowerCase();
                if (!allowedExtensions.includes(fileExtension)) {
                    Swal.fire({
                        title: 'Error!',
                        text: 'Allowed Extensions are: ' + allowedExtensions.join(', '),
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                    return; // Stop the form submission
                }
            }
        });

        try {
            const response = await fetch('/admin/uploadProductImages',{
                method: 'PUT',
                body: formData
            });

            if (!response.ok) {
                throw new Error('Network response was not ok');
            }

            const data = await response.json(); 

            if (data.message === "Please upload at least 4 images") {
                Swal.fire({
                    title: "Error!",
                    text: data.message,
                    icon: "error",
                    timer: 1500,
                    buttons: false
                });
            } else if(data.message === "Image added successfully"){
                Swal.fire({
                    title: "Success!",
                    text: data.message,
                    icon: "success",
                    timer: 1500,
                    buttons: false
                });
                setTimeout(function() {
                    location.reload();
                }, 1500);
            }
        } catch (error) {
            console.error('An error occurred:', error);
        }
    });

    
</script>


