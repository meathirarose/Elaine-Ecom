        <section class="content-main">
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Edit & Update Product</h2>
                    </div>
                </div>
                <div class="d-flex message m-3"> 
                    <%
                    if(typeof message !== 'undefined'){
                        %>
                        <p><br><%= message %></p>
                        <%
                    }
                    %>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">

                        <div class="card-body">
                            <form action="" method="post">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Product title</label>
                                    <input type="text" placeholder="Type here" class="form-control" name="prdctName" id="product_name" value="<%= prdctData.prdctName %>" />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Product description</label>
                                    <input placeholder="Type here" id="product_description" name="prdctDescription" value="<%= prdctData.prdctDescription %>" class="form-control" rows="4">
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Regular price</label>
                                            <div class="row gx-2">
                                                <input placeholder="â‚¹" type="number" name="prdctPrice" value="<%= prdctData.prdctPrice %>" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Quantity</label>
                                            <input placeholder="" type="number" name="prdctQuantity" value="<%= prdctData.prdctQuantity %>" class="form-control" />
                                        </div>
                                    </div>
                                    
                                        <div class="col-lg-4">
                                            <label class="form-label">Category</label>
                                            <select class="form-select">
                                                    <% cateData.forEach(cate => { %>
                                                        <% if(cate.is_listed === true){%>
                                                            <option ><%= cate.cateName %></option>
                                                        <%}%>
                                                    <% }) %>
                                                </select>
                                        </div>
                                </div>
                                <input type="text" required name="prdctId" value="<%= prdctData._id %>" hidden>

                                <button class="btn btn-md rounded font-sm hover-up" type="submit">submit</button>
                            </form>
                        </div>
                    </div>
                    <!-- card end// -->
                </div>
                <div class="col-lg-3 ">
                    <div class="card mb-4 ">
                        <div class="card-header">
                            <h4>Media</h4>
                        </div>
                        <% productImagesArray.forEach(images=>{%>
                            <div class="d-flex">
                                <div class="m-2 ">
                                    <img src="/uploads/<%= images %>" alt="Userpic" style="height: 75px; width: 75px;" />
                                </div>
            
                                <div class="card-body">
                                    <div class="input-upload">
                                        <a href="" onclick="deleteImage('<%=images%>')">Delete</a>
                                    </div>
                                </div>
                            </div>
                            <%});%>
                    </div><!-- card end// -->
                </div>
                </div>
            </div>
        </section>
        <!-- content-main end// -->
        
    </main>
   
    <script>
        
        async function deleteImage(imageId){

            const confirmDelete = confirm("Are you sure want to delete the image?");

            if(confirmDelete){
                try {
                    const response = await fetch(`/admin/deleteProductImage?imageId=${imageId}`,{
                        method: 'DELETE',
                        headers: {
                            'Content-type':'application/json'
                        },
                    });
                    if(!response.ok){
                        window.location.reload();
                    }else{
                        console.error("Error in handling");
                    }
                } catch (error) {
                    console.error("Error", error);
                }
            }
        }
        
    </script>

