<script>
    async function changeOfferStatus(offerId, newStatus){
        console.log(offerId);
        console.log(newStatus);
        const confirmAction = await Swal.fire({
            title: `Are you sure you want to ${newStatus} this offer?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: `Yes, ${newStatus} it`
        });

        if(confirmAction.isConfirmed){
            try {

                const response = await fetch(`/admin/offerStatus/${offerId}/${newStatus}`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                if(response.ok){
                    const data = await response.json();
                    window.location.reload();
                }else{
                    Swal.fire({
                        title: 'Error!',
                        text: `Failed to ${newStatus} the offer.`,
                        icon: 'error'
                    });
                }
                
            } catch (error) {
                Swal.fire({
                    title: 'Error!',
                    text: 'An error occurred while deleting the offer.',
                    icon: 'error'
                });
                console.error("Error:", error);
            }
        }
    }
</script>

<script>

    async function deleteOffer(offerId) {
        const confirmDelete = await Swal.fire({
            title: 'Are you sure?',
                    text: "You want to delete this offer?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, remove it!'
        });

        if (confirmDelete.isConfirmed) {
            try {
                const response = await fetch(`/admin/offer?offerId=${offerId}`, {
                    method: 'DELETE'
                });
                
                if (response.ok) {
                    const data = await response.json();

                    window.location.reload();  
                    
                } else {
                    Swal.fire({
                        title: 'Error!',
                        text: 'Failed to delete the offer.',
                        icon: 'error'
                    });
                }
            } catch (error) {
                Swal.fire({
                    title: 'Error!',
                    text: 'An error occurred while deleting the offer.',
                    icon: 'error'
                });
                console.error("Error:", error);
            }
        }
    }

</script>

