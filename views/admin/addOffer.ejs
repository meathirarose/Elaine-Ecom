    <script>

        $(document).ready(function() {
            $('#offer-type-select').change(function() {
                var selectedType = $(this).val();
                if (selectedType === 'Products') {
                    fetch('/admin/getProducts')
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        if (data.products) {
                            populateSelectOptions(data.products);
                        } else {
                            Swal.fire({
                                position: "center",
                                text: 'No products found',
                                showConfirmButton: false,
                                timer: 1500,
                                width: 450,
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error fetching products:', error);
                    });
                } else if (selectedType === 'Category') {
                    fetch('/admin/getCategories')
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        if (data.categories) {
                            populateSelectOptions(data.categories);
                        } else {
                            Swal.fire({
                                position: "center",
                                text: 'No categories found',
                                showConfirmButton: false,
                                timer: 1500,
                                width: 450,
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error fetching categories:', error);
                    });
                }
            });

            function populateSelectOptions(options) {
                var select = $('#offer-category-select');
                select.empty();
                select.append('<option disabled selected>--choose option--</option>');
                options.forEach(option => {
                    select.append('<option value="' + option + '">' + option + '</option>');
                });
            }
        });


    </script>
    <script>

    $('#offer-form').submit(function (e) {
        e.preventDefault();

        var formData = $(this).serialize();

        fetch('/admin/addoffer', {
            method: 'POST',
            body: formData,
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded'
            }
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        })
        .then(data => {
            if (data.error) {
                Swal.fire({
                    position: "center",
                    text: data.error,
                    showConfirmButton: false,
                    timer: 1500,
                    width: 450,
                });
            }

            if (data.message) {
                window.location.href = '/admin/offers';
            }
        })
        .catch(error => {
            var errorMessage = error.message || "Something went wrong";
            Swal.fire({
                position: "center",
                text: errorMessage,
                showConfirmButton: false,
                timer: 1500
            });
        });
    });

    
</script>




