                                    <input type="text" placeholder="Type here" value="<%=categories.cateName%>" name="cateName" class="form-control" id="product_name" />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Full description</label>
                                    <textarea placeholder="Type here" value="<%= categories.cateDescription %>" name="cateDescription" class="form-control" rows="4"></textarea>
                                </div>
                                <div>
                                    <input type="hidden" required name="id" value="<%= categories._id %>">
