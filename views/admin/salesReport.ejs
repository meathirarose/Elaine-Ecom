<script>
    document.getElementById("reportTypeSelect").addEventListener("change", function() {
        const selectedReportType = this.value; 

        const startDateContainer = document.querySelector('.start-date-container');
        const endDateContainer = document.querySelector('.end-date-container');
        if(selectedReportType === "custom") {
            startDateContainer.style.display = 'block';
            endDateContainer.style.display = 'block';
        } else {
            startDateContainer.style.display = 'none';
            endDateContainer.style.display = 'none';
        }
    });

    document.getElementById('generateButton').addEventListener('click', function(event) {
        event.preventDefault(); 

        const selectedReportType = document.getElementById("reportTypeSelect").value;
        const startDate = document.querySelector('input[name="start-date"]').value;
        const endDate = document.querySelector('input[name="end-date"]').value;

        fetch('/admin/salesReport', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                reportType: selectedReportType,
                startDate: startDate,
                endDate: endDate
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                displaySalesReport(data.orderData); 
            } else {
                console.error('Failed to generate sales report:', data.message);
            }        })
        .catch((error) => {
            console.error('Error:', error);
        });
    });

    function displaySalesReport(orderData) {
        const salesReportTableBody = document.querySelector('#salesReportTable tbody');

        salesReportTableBody.innerHTML = '';

        orderData.forEach((order, index) => {
            const row = `
            <tr>
                <th>${index + 1}</th>
                <td><a href="#" class="fw-bold">${order.orderId}</a></td>
                <td>${order.userName}</td>
                <td>${new Date(order.date).toLocaleDateString()}</td>
                <td>₹${order.totalAmount.toFixed(2)}</td>
                <td>${order.products.length}</td>
                <td>₹${order.couponDiscount.toFixed(2)}</td>
                <td>₹${order.offerDiscount.toFixed(2)}</td>
                <td>
                    <span class="badge badge-pill badge-soft-success">${order.paymentStatus}</span>
                </td>
                <td><i class="material-icons md-payment font-xxl text-muted mr-5"></i>${order.payment}</td>

            </tr>`;

            salesReportTableBody.innerHTML += row;
        });
    }
</script>

<script>
    document.getElementById('downloadPdfButton').addEventListener('click', function() {
        const salesReportTable = document.getElementById('salesReportTable');
        const grandTotal = "<%= grandTotal.toFixed(2) %>";
        const couponTotal = "<%= couponTotal.toFixed(2) %>";
        const offerTotal = "<%= offerTotal.toFixed(2) %>";
        
        const totalRows = `
            <tr>
                <td colspan="4"></td>
                <td><span class="fw-bold">Grand Total:</span>₹${grandTotal}</td>
                <td></td>
                <td><span class="fw-bold">Total Coupon Discount:</span>₹${couponTotal}</td>
                <td><span class="fw-bold">Total Offer Discount:</span>₹${offerTotal}</td>
                <td></td>
                <td></td>
            </tr>
        `;
        salesReportTable.querySelector('tbody').insertAdjacentHTML('beforeend', totalRows);

        html2pdf().from(salesReportTable).save();
    });

    document.getElementById('downloadExcelButton').addEventListener('click', function() {
        const salesReportTable = document.getElementById('salesReportTable');
        const grandTotal = "<%= grandTotal.toFixed(2) %>";
        const couponTotal = "<%= couponTotal.toFixed(2) %>";
        const offerTotal = "<%= offerTotal.toFixed(2) %>";
        
        const totalRows = `
            <tr>
                <td colspan="4"></td>
                <td><span class="fw-bold">Grand Total:</span>₹${grandTotal}</td>
                <td></td>
                <td><span class="fw-bold">Total Coupon Discount:</span>₹${couponTotal}</td>
                <td><span class="fw-bold">Total Offer Discount:</span>₹${offerTotal}</td>
                <td></td>
                <td></td>
            </tr>
        `;
        salesReportTable.querySelector('tbody').insertAdjacentHTML('beforeend', totalRows);

        const wb = XLSX.utils.table_to_book(salesReportTable);
        XLSX.writeFile(wb, 'sales_report.xlsx');
    });
</script>



